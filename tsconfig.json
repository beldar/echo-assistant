{
  "compilerOptions": {
    "target": "es2016",
    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "commonjs",
    "outDir": "dist/app",
    "newLine": "lf",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "app/**/*",
    "migrations/*"
  ],
  "types": [
    "node",
    "mocha"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target"
  ]
}
